<!-- views/sitemap.ejs -->

<urlset xmlns="http://www.sitemaps.org/schemas/sitemap/0.9">
    <% pages.forEach(page=> { %>
        <url>
            <loc>
                <%= `http://localhost:3000${page.url}` %>
            </loc>
            <lastmod>
                <%= page.lastmod %>
            </lastmod>
            <changefreq>
                <%= page.changefreq %>
            </changefreq>
            <priority>
                <%= page.priority %>
            </priority>
        </url>
        <% }); %>
</urlset>